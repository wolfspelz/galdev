<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <meta name="description" content="@(ViewData["MetaDescription"])" />
    <meta property="og:title" content="@(ViewData["MetaFacebookTitle"])" />
    <meta property="og:description" content="@(ViewData["MetaFacebookDescription"])" />
    <meta property="og:image" content="@(ViewData["MetaFacebookImage"])" />
    <meta property="og:image:alt" content="@(ViewData["MetaFacebookImageAlt"])" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@("https://" + Context.Request.Host + Context.Request.Path + Context.Request.QueryString)" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@(ViewData["MetaTwitterTitle"])" />
    <meta name="twitter:description" content="@(ViewData["MetaTwitterDescription"])" />
    <meta name="twitter:image" content="@(ViewData["MetaTwitterImage"])" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GaldevWeb.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="~/images/site/logo.png" style="max-height:40px;" alt="Logo MarcoPolo" />
                </a>
                <a class="navbar-brand" href="/">Galactic Developments</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Topics">@Model.I18n.String(path: "Title", i18n: new StringGeneratorI18n { ["de-DE"] = () =>"Themen", ["en-US"] = () =>"Topics" })</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/About">@Model.I18n.String(path: "Title", i18n: new StringGeneratorI18n { ["de-DE"] = () =>"About", ["en-US"] = () =>"About" })</a>
                        </li>

                        <li class="nav-item">
                            <div class="my-findform">
                                <form id="selectLanguage" asp-page="/Find" method="get" class="form-horizontal" role="form">
                                    <input type="text" name="term" placeholder="@Model.I18n.String(path: "Search", i18n: new StringGeneratorI18n { ["de-DE"] = () =>"Suchen", ["en-US"] = () =>"Search" })" />
                                </form>
                            </div>
                        </li>

                        <li class="nav-item">
                            <div class="nav-link">
                                @await Html.PartialAsync("_SelectLanguagePartial")
                            </div>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <div class="content">
        @if ((ViewData["Active"] ?? "").ToString() == "Index") {
            <div class="stage-Index"></div>
            <div class="container">
                <div class="col-12 text-end" style="position:relative; top:-30px; color: #ffffff; text-shadow: 2px 1px 2px #000000;">
                    @Model.I18n.String(path: "Meta/Image", i18n: new StringGeneratorI18n {
                ["de-DE"] = () => "Ein Frachter über den Wolken in der oberen Venus-Atmosphäre",
                ["en-US"] = () => "A bubble freighter in the upper Venus atmosphere crusing above the clouds"
                })
                </div>
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        } else {
            <div class="container">
                <img src="/images/site/stage-VenusFreighter-1600x200.jpg" style="width:100%;" class="img-fluid" alt="Venus Freighter" />
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        }
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2000 - 2023 (Wolf) - <a asp-area="" asp-page="/Privacy">Impressum / Legal / Privacy / DSGVO</a>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>