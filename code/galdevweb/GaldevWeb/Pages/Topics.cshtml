@page
@model TopicsModel
@{
    ViewData["Active"] = "Topics";
}

<div class="row my-3">
    <div class="col-12">
        <h1>
            @Model.I18n.String(path: "Title", i18n: new StringGeneratorI18n {
            ["de-DE"] = () => "Nach Themen",
            ["en-US"] = () => "By Topic"
            })
        </h1>
    </div>
</div>

<div class="gd-multi-column">
    @foreach (var topic in Model.Series.Topics) {
        @if (Model.Series.GetEntriesOfTopic(topic).Count > 0) {
            <div style="break-inside: avoid;">
                <div class="row mt-3">
                    <div class="col-12">
                        <h2>
                            <a name="@topic">
                                @Model.Series.GetTitleOfTopic(topic)
                            </a>
                        </h2>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-12">
                        @foreach (var entry in Model.Series.GetEntriesOfTopic(topic)) {
                            <div>
                                <a asp-page="/Timeline" asp-route-name="@entry.SeoTitle">@entry.Year @entry.Title</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>
