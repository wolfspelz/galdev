@page "{min?}"
@model ListModel
@{
    ViewData["Active"] = "List";
}

<div class="row mt-3">
    <div class="col-12">
        <h2>
            @Model.I18n.String(path: "Title", i18n: new StringGeneratorI18n {
            ["de-DE"] = () => "Zeitleiste",
            ["en-US"] = () => "Timeline"
            })
        </h2>
    </div>
</div>

@foreach (var entry in Model.List) {
    <div class="row mt-1" style="position: relative">
        @if (string.IsNullOrEmpty(entry.Image)) {
            <div class="col-7 gd-list-item">
                <a asp-page="/Timeline" asp-route-name="@entry.SeoTitle">@entry.Year @entry.Title</a>
            </div>
        } else {
            <div class="col-7 gd-list-item">
                <a asp-page="/Timeline" asp-route-name="@entry.SeoTitle" onmouseover="document.getElementById('iHoverImage-@entry.Name').style.display='block'" onmouseout="document.getElementById('iHoverImage-@entry.Name').style.display='none'">@entry.Year @entry.Title</a>
            </div>
            <div class="col-5" id="iHoverImage-@entry.Name" style="display:none; position: absolute; right: 0px;">
                <img class="gd-list-image float-end img-fluid" src="/Image/@entry.Image" />
            </div>
        }
    </div>
}
